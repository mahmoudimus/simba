{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "uv run python -m simba.hooks.session_start",
        "timeout": 15000
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": "uv run python -m simba.hooks.user_prompt_submit",
        "timeout": 3000
      }
    ],
    "PostToolUse": [
      {
        "type": "command",
        "command": "uv run python -m simba.hooks.post_tool_use",
        "timeout": 3000
      }
    ],
    "PreToolUse": [
      {
        "type": "command",
        "command": "uv run python -m simba.hooks.pre_tool_use",
        "timeout": 3000
      }
    ],
    "PreCompact": [
      {
        "type": "command",
        "command": "uv run python -m simba.hooks.pre_compact",
        "timeout": 5000
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "uv run python -m simba.hooks.stop",
        "timeout": 5000
      }
    ]
  }
}
